---
- name: My ansible test website
  hosts: all

  tasks:
    - name: Run ping command
      ping:
    - name: Install nginx webserver
      apt:
        name: nginx

    - name: Copy file from Git to webserver
      git:
        repo: https://github.com/dixit12190/MyRepo.git
        dest: /etc/ansible/
        clone: yes
        update: yes

    - name: Copy file from server to nginx location
      copy:
        src: /etc/ansible/MyRepo/
        dest: /var/www/html/

    - name: start nginx
      service:
        name: nginx
        state: started
